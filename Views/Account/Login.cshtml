@section Title {
    Login
}
<div class="flex justify-center items-center min-h-screen px-8">
    <div class="bg-white shadow-lg rounded-lg lg:flex w-full overflow-hidden">
        <div class="lg:w-3/5 w-full p-8 lg:p-10">
            <h1 class="text-3xl font-bold text-gold mb-6 text-center border-b-2 border-gold pb-3">Login</h1>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                    <p>@TempData["ErrorMessage"]</p>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }
            <form asp-action="Login" method="POST">
                <div class="mb-4">
                    <label for="email" class="block text-gray-600 mb-2 font-medium">Email:</label>
                    <input type="email" id="email" name="email" class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Enter your email">
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-gray-600 mb-2 font-medium">Password:</label>
                    <input type="password" id="password" name="password" class="w-full border border-gray-300 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Enter your password">
                </div>
                <div class="mb-6 text-sm text-gray-500 text-right">
                    <a href="#" class="hover:underline hover:text-gray-600">Forgot Password?</a>
                </div>
                <button name="submit" type="submit" class="bg-gold hover:contrast-75 text-white font-semibold rounded-lg py-2 px-4 w-full transition duration-300">
                    Login
                </button>
            </form>
            <div class="mt-6 text-gray-600 text-center">
                Don't have an account?
                <a href="/Account/Register" class="text-green-600 hover:underline hover:text-gray-500 font-medium">Sign up Here</a>
            </div>
        </div>
        <div class="lg:w-2/3 hidden lg:block">
            <img src="~/images/login.jpg" alt="Placeholder Image" class="object-cover w-full h-full rounded-r-lg">
        </div>
    </div>
</div>