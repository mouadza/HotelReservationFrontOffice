@section Title {
    Register
}
<div class="flex justify-center items-center min-h-screen rounded-lg px-8 py-4">
    <div class="bg-white shadow-lg rounded-lg lg:flex  w-full overflow-hidden">
        <div class="lg:w-1/2 hidden lg:block h-auto">
            <img src="~/images/login.jpg" alt="Placeholder Image" class="object-cover w-full h-full rounded-l-lg">
        </div>
        <div class="lg:w-1/2 w-full p-8 lg:p-12">
            <h1 class="text-4xl font-bold text-gold mb-6 text-center border-b-2 border-gold pb-3">Register</h1>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }
            <form action="/Account/Register" method="POST">
                @Html.AntiForgeryToken()
                <div class="mb-6">
                    <label for="fname" class="block text-gray-600 mb-2 font-medium">First Name:</label>
                    <input type="text" id="fname" name="fname" class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Enter your first name">
                </div>
                <div class="mb-6">
                    <label for="lname" class="block text-gray-600 mb-2 font-medium">Last Name:</label>
                    <input type="text" id="lname" name="lname" class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Enter your last name">
                </div>
                <div class="mb-6">
                    <label for="tele" class="block text-gray-600 mb-2 font-medium">Phone:</label>
                    <input type="text" id="tele" name="tele" class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Enter your phone number">
                </div>
                <div class="mb-6">
                    <label for="email" class="block text-gray-600 mb-2 font-medium">Email:</label>
                    <input type="email" id="email" name="email" class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Enter your email">
                </div>
                <div class="mb-6">
                    <label for="password" class="block text-gray-600 mb-2 font-medium">Password:</label>
                    <input type="password" id="password" name="password" class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Create a password">
                </div>
                <div class="mb-6">
                    <label for="Cpassword" class="block text-gray-600 mb-2 font-medium">Confirm Password:</label>
                    <input type="password" id="Cpassword" name="Cpassword" class="w-full border border-gray-300 rounded-lg py-3 px-4 focus:outline-none focus:ring-2 focus:ring-gold" autocomplete="off" placeholder="Confirm your password">
                </div>
                <button type="submit" name="submit" class="bg-gold hover:contrast-75 text-white font-semibold rounded-lg py-3 px-4 w-full transition duration-300">
                    Register
                </button>
            </form>
            <div class="mt-6 text-gray-600 text-center">
                Already have an account?
                <a href="/Account/Login" class="text-green-600 hover:underline hover:text-gray-500 font-medium">Sign In Here</a>
            </div>
        </div>       
    </div>
</div>
